@model GourmetPizza.Models.PizzaPurchase

@{
    ViewData["Title"] = "Purchase Pizzas";
}

<h2>Purchase Pizza </h2>
<form asp-action="Purchase">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PizzaName" class="control-label"></label>
        <select asp-for="PizzaName" class="form-control">
            <option>BBQ Beef</option>
            <option>Chicken and Pineapple</option>
            <option>Pepperoni Feast</option>
            <option>Vegetarian</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PizzaCount" class="control-label"></label>
        <input asp-for="PizzaCount" class="form-control" />
        <span asp-validation-for="PizzaCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreditCard" class="control-label"></label>
        <input asp-for="CreditCard" class="form-control" />
        <span asp-validation-for="CreditCard" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Purchase" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


